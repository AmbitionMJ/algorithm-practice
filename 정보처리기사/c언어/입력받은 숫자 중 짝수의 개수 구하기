#include <stdio.h>

int main() {
    int i, cnt = 0; // 변수 선언 및 초기화
    int arr[5]; // 5개의 정수를 저장하는 배열 선언

    
    for (i = 0; i < 5; i++) {
        scanf("%d", &arr[i]); // 사용자로부터 5개의 정수 입력 받기
    }

    // 입력된 정수 중에서 짝수의 개수 세기
    for (i = 0; i < 5; i++) {
        if (arr[i] % 2 == 0) {
            cnt = cnt + 1; // 짝수인 경우 cnt 증가
        }
    }

    // 짝수의 개수 출력
    printf("짝수의 개수는? : %d", cnt);

    return 0;
}
